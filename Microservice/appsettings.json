{
  "Kestrel": {
    "Endpoints": {
      "Https": { "Url": "https://localhost:8378" },
      "Http": { "Url": "http://localhost:5157" }
    }
  },

  "ConnectionStrings": {
    "PostgreSqlIdentityDB": "Server=127.0.0.1; Port=5432; Database=IdentityDB; User Id=postgres; Password=postgres;"
  },

  "HashSettings": {
    "KEY_SIZE": 32,
    "SALT_SIZE": 16,
    "ITERATIONS": 10000
  },

  "Upload": {
    "LocalPhysicalPath": "UploadedFiles",
    "AllowedFileExtensions": [ "txt", "json" ]
  },

  "Download": {
    "LocalPhysicalPath": "UploadedFiles",
    "MIMEMapping": {
      "txt": "text/plain",
      "zip": "application/zip",
      "json": "application/json"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}
